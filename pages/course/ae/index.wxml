<view class="container_2">
  <view class="final_score">你至少要拿到：</view> 
  <view class="final_score_exam">
    <text class="text_2">T4 Exam 2 (40%) </text>
    <input class="input_box" value="{{x}}" ></input>% 
  </view>
</view>

