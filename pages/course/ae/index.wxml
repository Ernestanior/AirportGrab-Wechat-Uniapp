<view class="grade_name">你的分数</view>

<view class="container_1">
  <view class="name_1">T2 Portfolio (10%)</view>

  <view class="enter_3">   
      <input class="input_box" bindinput="score_1"></input>%
  </view>
</view>

<view class="container_1">
  <view class="name_1">T2 Exam 1 (20%)</view>
  <view class="enter_3">   
