.head,.body{
  width: 90vw;
  background-color: #fff;
  margin: 30rpx auto;
  border-radius:20rpx; 
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx rgb(216, 216, 216);
  overflow: hidden;
  position: relative;
}
.body{
  display: flex;
  padding: 15rpx 40rpx;
  box-sizing: border-box;
}
.left_body{
  flex: 25%;
  color: #666;
