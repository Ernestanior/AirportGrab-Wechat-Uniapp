page {
  background-color: #fff;
}
.box_1{
  height: 450rpx;
  width: 100%;
  background: linear-gradient(180deg,#1653c4, #83abfc );
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
  position: relative;
}
.user_button{
  position: absolute;
  top: 80rpx;
  left:50%;
  transform: translateX(-50%);
}
.user_title{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 50rpx;
  left:50%;
  transform: translateX(-50%);
  color:#fff;
}
.user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  margin-bottom: 20rpx;
}
.user_exit{
  margin-top: 30rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #fff;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.selection{
  margin: 50rpx auto;
  width: 90vw;
  height: 8vh;
  border-bottom: 1px solid #666;
  display: flex;
  align-items: center;
  position: relative;
}
.client_img{
  width: 75rpx;
  height: 75rpx;
}
.order_img{
  width: 56rpx;
  height: 56rpx;
  margin: 0 8rpx 0 9rpx;
}
.client{
  background-color: transparent;
  width: 200rpx;
  font-weight: 400;
  font-size: 30rpx;
  display: flex;
  justify-content: left;
  color: #666;
  padding: 20rpx 25rpx;
}
.icon_youla{
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%) rotate(-90deg);
  height: 40rpx;
  width: 40rpx;
}


.tabbar{
  position: fixed;
  bottom: 0;
  height: 164rpx;
  background-color: #fff;
  width: 100%;
  display: flex;
  z-index: 9999;
}
.tabbar button{
  flex: 0.5;
  font-size: 25rpx;
  display: flex;
  color: #979797;
  font-weight: 500;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tabbar .theme_blue{
  color: #1653c4
}
.tabbar image{
  height: 50rpx;
  width: 50rpx;
  margin-bottom: 10rpx;
}